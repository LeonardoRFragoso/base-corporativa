DEBUG=False
DJANGO_SETTINGS_MODULE=core.settings
SECRET_KEY=<GERAR_UMA_CHAVE_FORTE>

# Hosts
ALLOWED_HOSTS=.basecorporativa.store,.railway.app

# CORS/CSRF (frontend)
CORS_ALLOWED_ORIGINS=https://basecorporativa.store,https://www.basecorporativa.store
CSRF_TRUSTED_ORIGINS=https://basecorporativa.store,https://www.basecorporativa.store,https://*.railway.app

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=<INSIRA>
MERCADOPAGO_PUBLIC_KEY=<INSIRA>
# Enquanto usar Railway:
MERCADOPAGO_NOTIFICATION_URL=https://<SEU-APP>.up.railway.app/api/payments/webhook/
# Depois (com domínio próprio do backend):
# MERCADOPAGO_NOTIFICATION_URL=https://api.basecorporativa.store/api/payments/webhook/

# Melhor Envio
MELHORENVIO_CLIENT_ID=<INSIRA>
MELHORENVIO_CLIENT_SECRET=<INSIRA>
MELHORENVIO_AUTH_BASE=https://www.melhorenvio.com.br
MELHORENVIO_API_BASE=https://www.melhorenvio.com.br
MELHORENVIO_API_TOKEN=
# Enquanto usar Railway:
MELHORENVIO_REDIRECT_URI=https://<SEU-APP>.up.railway.app/api/shipping/oauth/callback/
# Depois (com domínio próprio do backend):
# MELHORENVIO_REDIRECT_URI=https://api.basecorporativa.store/api/shipping/oauth/callback/

# Frete (ajuste se necessário)
SHIPPING_ORIGIN_ZIP=21921-640
SHIPPING_DEFAULT_WEIGHT_GRAMS=300
SHIPPING_DEFAULT_LENGTH_CM=30
SHIPPING_DEFAULT_WIDTH_CM=20
SHIPPING_DEFAULT_HEIGHT_CM=5
SHIPPING_FREE_THRESHOLD=0